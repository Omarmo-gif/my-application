<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:id="@+id/mainLayout">
    <ImageView
        android:id="@+id/fav_frame"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fav_item_bookimage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/life1" />


    <TextView
        android:id="@+id/fav_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Logical chess "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fav_item_bookimage"
        app:layout_constraintTop_toTopOf="@+id/fav_frame" />

    <TextView
        android:id="@+id/fav_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="By Irving chernev"
        app:layout_constraintStart_toEndOf="@+id/fav_item_bookimage"
        app:layout_constraintTop_toBottomOf="@+id/fav_item_title" />

    <TextView
        android:id="@+id/fav_item_pages_rev"
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:text="830 Pages  320 review"
        app:layout_constraintStart_toEndOf="@+id/fav_item_bookimage"
        app:layout_constraintTop_toBottomOf="@+id/fav_item_author" />

    <Button
        android:id="@+id/favBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_favorite_red_24dp"
        app:layout_constraintEnd_toEndOf="@+id/fav_frame"
        app:layout_constraintTop_toTopOf="@+id/fav_frame" />

    <RatingBar
        android:id="@+id/fav_item_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/fav_item_bookimage"
        app:layout_constraintTop_toBottomOf="@+id/fav_item_author"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>