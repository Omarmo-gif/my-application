<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Description">

    <ImageView
        android:id="@+id/desc_frame"
        android:layout_width="680dp"
        android:layout_height="179dp"
        android:background="@drawable/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/desc_imagebook"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Logical chess "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/desc_imagebook"
        app:layout_constraintTop_toTopOf="@+id/desc_frame" />

    <TextView
        android:id="@+id/desc_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="By Irving chernev"
        app:layout_constraintStart_toEndOf="@+id/desc_imagebook"
        app:layout_constraintTop_toBottomOf="@+id/desc_title" />

    <TextView
        android:id="@+id/desc_pagrev"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="830 Pages"
        app:layout_constraintStart_toEndOf="@+id/desc_imagebook"
        app:layout_constraintTop_toBottomOf="@+id/ratingBardesc" />

    <TextView
        android:background="@color/light_medium_gray"
        android:id="@+id/dettails_desc"
        android:layout_width="323dp"
        android:layout_height="485dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_imagebook"
        android:textStyle="italic"
        android:textColor="	#000000"/>

    <RatingBar
        android:id="@+id/ratingBardesc"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:rating="2"
        app:layout_constraintStart_toEndOf="@+id/desc_imagebook"
        app:layout_constraintTop_toBottomOf="@+id/desc_author"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>